{% extends 'TodoCerdoTodoCerdoBundle::layout.html.twig' %}

{% block body %}
<h1>Receta edit</h1>

<form class="blogger" action="{{ path('receta_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {% autoescape false %}
    {{ form_row(edit_form.titulo) }}
    {{ form_row(edit_form.file) }}
    {{ form_row(edit_form.descripcion) }}
    
    {{ form_row(edit_form.detalle)}}
    {{ tinymce_init() }}  

    {{form_rest(edit_form)}} 
    {% endautoescape %}
    <p>
        <button class="button" type="submit">Guardar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a class="link_navegacion" href="{{ path('receta') }}">
            Volver a Recetas
        </a>
    </li>
    <li>
        <form action="{{ path('receta_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="button" type="submit">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}