{% extends 'TodoCerdoTodoCerdoBundle::layout.html.twig' %}

{% block title %}Confirmar Pedido{% endblock%}

{% block stylesheets %}
{{ parent() }}

    {% stylesheets 'bundles/todocerdotodocerdo/css/reveal.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock %}

{% block body %}
    <header>
    <h2>Confirmar Pedido</h2>
    </header>
    
    <div>
    {#Cargo formulario "DireccionType.php". #}
        <form class="blogger" id="form_confirm_pedido"
              action="{{ path('TodoCerdoTodoCerdoBundle_finalizarPedido') }}" 
              method="post" {{ form_enctype(form) }} >

                {{ form_row(form.fechaEntrega) }}
            

                {{ form_row(form.horarioTentativo)}}
                
           
                {{form_row(form.confirmarPrecio)}}
            
            
                {{form_row(form.medioConfirmacion)}}
            
            
                {{form_row(form.pagaCon)}}
                
                
                            
                {{ form_rest(form) }}
        </form>
    </div>   
{% endblock %}


{% block javascripts %}

     {{ parent() }}
        <script type="text/javascript">

            $(document).ready(function(){
                
                $('#form_confirm_pedido').on('click','#confirmarPedido_confirmarPrecio',function() {
                
                    console.log("entra");
                    if( $('#confirmarPedido_confirmarPrecio').is(':checked')) {
                        $('#confirmarPedido_medioConfirmacion').removeAttr("disabled");
                        
                    }else{
                        $('#confirmarPedido_medioConfirmacion').attr("disabled", "disabled");
                        
                    }
                });
                
            });

            </script>
            
{% endblock %}            